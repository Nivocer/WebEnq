<a class="icon add" title="<?php echo t('vraag toevoegen'); ?>" href="<?php echo $this->baseUrl('/question/add') ?>">&nbsp;</a>
<a href="<?php echo $this->baseUrl('/question/add') ?>"><?php echo t('vraag toevoegen'); ?></a>

<?php if (!$this->questions || $this->questions->count() == 0): ?>
    <p><?php echo t('Er zijn nog geen vragen aangemaakt'); ?></p>
<?php else: ?>
    <table>
        <thead>
            <tr>
                <th><?php echo t('vraag'); ?></th>
                <th><?php echo t('datum toegevoegd'); ?></th>
                <th><?php echo t('in gebruik in questionnaires'); ?></th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($this->questions as $question): ?>
                <tr>
                    <td>
                        <?php echo $question->QuestionText[0]->text; ?>
                    </td>
                    <td>
                        <?php echo $question->created; ?>
                    </td>
                    <td>
                        <?php foreach ($question->QuestionnaireQuestion as $qq): ?>
                            <a href="<?php echo $this->baseUrl('/questionnaire/edit/id/' . $qq->questionnaire_id); ?>"><?php echo $qq->questionnaire_id; ?></a>
                        <?php endforeach;?>
                    </td>
                    <td>
                        <a class="icon edit" title="<?php echo t('bewerken'); ?>" href="<?php echo $this->baseUrl("/question/edit/id/" . $question->id);    ?>">&nbsp;</a>
                        <?php if($question->QuestionnaireQuestion->count() == 0): ?>
                            <a class="icon delete" title="<?php echo t('verwijderen'); ?>" href="<?php echo $this->baseUrl("/question/delete/id/" . $question->id); ?>">&nbsp;</a>
                        <?php endif; ?>                    
                    </td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
