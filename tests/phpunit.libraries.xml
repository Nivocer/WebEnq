<phpunit bootstrap="./bootstrap.php" colors="true">
    <testsuite name="Webenq4 Libraries Test Suite">
        <directory>./libraries/</directory>
	</testsuite>
    <filter>
        <whitelist>
            <directory suffix=".php">../libraries/WebEnq4</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="../public/tests/log/libraries/coverage" charset="UTF-8"
            yui="true" highlight="true" lowUpperBound="50" highLowerBound="80"/>
        <log type="testdox-html" target="../public/tests/log/libraries/testdox.html" />
    </logging>
</phpunit>
