<phpunit bootstrap="./bootstrap.php" colors="true">
    <testsuite name="Webenq Test Suite">
        <directory>./application/</directory>
	</testsuite>
    <filter>
        <whitelist>
            <directory suffix=".php">../application/</directory>
            <exclude>
                <directory>../application/views/</directory>
                <directory>../application/models/</directory>
                <file>../application/Bootstrap.php</file>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="../public/tests/log/report" charset="UTF-8"
            yui="true" highlight="true"
            lowUpperBound="50" highLowerBound="80"/>
        <log type="testdox-html" target="../public/tests/log/testdox.html" />
    </logging>
</phpunit>
